FROM node:lts-alpine
ENV PORT=4000
ENV BCRYPT_SALT_ROUNDS=11
ENV NANOID_SIZE=11
ENV DATABASE=database.sqlite
ENV BASE_URL=http://localhost:4000
ENV JSON_WEB_TOKEN_SECRET="secret string"
ENV COMPANY="company name"
WORKDIR /app
COPY package*.json /app
RUN npm install
COPY . /app
EXPOSE 4000
CMD npm start

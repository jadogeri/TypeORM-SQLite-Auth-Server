{
  "name": "typeorm-sqlite-auth-server",
  "version": "1.0.0",
  "description": "Node + Express app utilizing TypeORM for authorization and authentication of backend apps",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "testDB:start": "nodemon src/tests/index.ts",
    "stop": "nodemon src/tests/index.ts",
    "test": "jest --coverage --testPathPatterns=tests/ --runInBand --detectOpenHandles --colors",
    "unit": "jest --testPathPatterns=unit.test.ts$ --colors",
    "integration": "jest --detectOpenHandles --testPathPatterns=integration.test.ts$ --colors --watchAll --no-cache --runInBand --verbose",
    "e2e": "jest --testPathPatterns=e2e.test.ts$ --detectOpenHandles",
    "start": "nodemon index.ts",
    "watch": "nodemon --exec ts-node -- ./src/tests/server.ts",
    "testserver": "nodemon --exec ts-node -- ./src/tests/server.ts",
    "ci": "start-server-and-test testserver && npm run e2e"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jadogeri/TypeORM-Sqlite-Auth-Server.git"
  },
  "keywords": [
    "backend",
    "api",
    "JosephAdogeri",
    "josephadogeridev",
    "express",
    "typescript",
    "node",
    "typeorm",
    "sqlite"
  ],
  "author": "Joseph Adogeri",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jadogeri/TypeORM-Sqlite-Auth-Server/issues"
  },
  "homepage": "https://github.com/jadogeri/TypeORM-Sqlite-Auth-Server#readme",
  "dependencies": {
    "@josephadogeridev/auth-credential-validator-ts": "^1.0.3",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "i": "^0.3.7",
    "jsonwebtoken": "^9.0.2",
    "jwt-check-expiry": "^1.0.10",
    "jwt-decode": "^4.0.0",
    "mongodb": "^6.18.0",
    "nanoid": "^5.0.9",
    "nanoid-dictionary": "^4.3.0",
    "node-localstorage": "^3.0.5",
    "nodemon": "^3.1.10",
    "npm": "^11.5.2",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nanoid-dictionary": "^4.2.3",
    "@types/node": "^24.3.0",
    "@types/node-localstorage": "^1.3.3",
    "@types/supertest": "^6.0.3",
    "babel-jest": "^30.0.5",
    "babel-loader": "^10.0.0",
    "jest": "^30.1.1",
    "jest-environment-jsdom": "^30.1.1",
    "jest-localstorage-mock": "^2.4.26",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
